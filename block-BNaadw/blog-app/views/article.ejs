<!DOCTYPE html>
<html>
  <head>
    <title>User Page</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
      crossorigin="anonymous"
    />
  </head>
  <body class="bg-info">
    <header>
      <div class="d-flex justify-content-between align-item-baseline">
        <h2 class="text-primary">Blog</h2>
        <nav class="d-flex">
          <a href="/">
            <button class="btn btn-primary">Home</button>
          </a>
          <a class="mx-5" href="/users/login">
            <button class="btn btn-warning">Login</button>
          </a>

          <a href="/users">
            <button class="btn btn-success">Register</button>
          </a>
        </nav>
      </div>
    </header>
    <main>
      <div class="border border-warning container-sm bg-light-subtle mt-5">
        <form action="/article" method="post" class="mt-5">
          <h2 class="text-center mt-3 text-secondary">Article-Form</h2>
          <input
            type="text"
            name="title"
            placeholder="Title"
            class="form-control mt-5"
          />
          <input
            type="text"
            name="description"
            placeholder="Add Description"
            class="form-control mt-2"
          />

          <input
            type="number"
            name="likes"
            placeholder="Likes"
            class="form-control mt-2"
          />
          <input
            type="text"
            name="author"
            placeholder="Author-Name"
            class="form-control mt-2"
          />

          <div class="text-center">
            <button class="btn btn-success mt-3 mb-3">Add Article</button>
          </div>
        </form>
      </div>
      <div>
        <% articles.forEach(article=>{ %>
        <h3 class="text-secondary mt-3"><%=article.title%></h3>
        <h3 class="text-secondary mt-3"><%=article.description%></h3>

        <a href="/article/<%=article._id%>">
          <button class="btn btn-warning">Show</button>
        </a>

        <% })%>
      </div>
    </main>
  </body>
</html>
