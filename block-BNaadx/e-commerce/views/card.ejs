<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <main>
      <div class="d-flex justify-content-between mt-3 mx-5 bg-info">
        <% product.forEach(p=>{%>
        <div>
          <h2 class="mx-3 text-primary">Name:<%=p.name%></h2>
          <hr />
          <h2 class="mx-3 text-primary">Price:<%=p.price%></h2>
          <hr />
          <h2 class="mx-3 text-primary">Quantity:<%=p.quantity%></h2>
          <a href="/"
            ><button class="btn btn-warning mt-2">Add to Cart</button></a
          >
        </div>
        <% })%>
      </div>
    </main>
  </body>
</html>
