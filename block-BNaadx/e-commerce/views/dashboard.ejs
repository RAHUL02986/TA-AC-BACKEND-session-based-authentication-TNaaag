<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <header class="d-flex justify-content-between mt-3 mx-5">
      <a href="/admin/logout"
        ><button class="btn btn-danger">Logout Admin</button></a
      >

      <a href="/products/new"
        ><button class="btn btn-success">Create A Product</button></a
      >
    </header>

    <h1 class="text-center mt-5">welcome to dashboard</h1>
    <% products.forEach(product => { %>
    <hr />
    <div>
      <h2>Product: <%= product.name %></h2>
      <a href="/products/<%= product._id %>/detail"
        ><button class="btn btn-success">Show More</button></a
      >
      <a class="mx-4" href="/products/<%= product._id %>/edit"
        ><button class="btn btn-warning">Edit</button></a
      >
      <a href="/products/<%= product._id %>/delete"
        ><button class="btn btn-danger">Delete</button></a
      >
    </div>
    <% }) %>
  </body>
</html>
